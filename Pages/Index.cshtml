@page "/Index"

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
 

@model CarShowroom.Pages.IndexModel
@{
    ViewData["Title"] = "الرئيسية - لوحة التحكم";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>
<body>

    <!-- 10- القائمة الجانبية -->
    <div class="sidebar">
        <h2>معرض السيارات</h2>
        <a href="/Cars">🚗 السيارات</a>
        <a href="/Customers">👥 العملاء</a>
        <a href="/Sales">💰 المبيعات</a>
        <a href="/Reports">📊 التقارير</a>
    <form method="post" asp-page-handler="Logout" ">
        <button type="submit" class="logout">🚪 تسجيل الخروج</button>
    </form>

    </div>

    <!-- 20- المحتوى الرئيسي -->
    <div class="main-content">
        <header>
            <h1>مرحباً بك في لوحة التحكم</h1>
        </header>

        <!-- 30- بطاقات الإحصائيات -->
        <div class="cards">
            <div class="card">
                <h3>عدد السيارات</h3>
                <p>@Model.CarsCount</p>
            </div>

            <div class="card">
                <h3>عدد العملاء</h3>
                <p>@Model.CustomersCount</p>
            </div>

            <div class="card">
                <h3>عدد المبيعات</h3>
                <p>@Model.SalesCount</p>
            </div>
        </div>
    </div>

</body>
</html>
