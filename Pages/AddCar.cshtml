@page
@model CarShowroom.Pages.AddCarModel
@{
    ViewData["Title"] = "إضافة سيارة جديدة";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/AddCar.css" />
</head>
<body>
    <div class="form-container">
        <div class="form-header">
            <div>
                <h1>🚗 إضافة سيارة جديدة</h1>
                <p class="subtitle">قم بإضافة بيانات السيارة الجديدة إلى قاعدة البيانات</p>
            </div>
            <a href="/Cars" class="back-btn">← الرجوع إلى قائمة السيارات</a>
        </div>

        <form method="post" enctype="multipart/form-data">
            <div class="form-grid">
                <div class="form-group">
                    <label>الموديل</label>
                    <input type="text" name="Model" required placeholder="مثل: Toyota Corolla 2022" />
                </div>

                <div class="form-group">
                    <label>السنة</label>
                    <input type="number" name="Year" required min="1990" max="2100" />
                </div>

                <div class="form-group">
                    <label>السعر (جنيه)</label>
                    <input type="number" step="0.01" name="Price" required />
                </div>

                <div class="form-group">
                    <label>صورة السيارة</label>
                    <input type="file" name="ImageFile" accept="image/*" required />
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="save-btn">💾 حفظ السيارة</button>
                <a href="/Cars" class="cancel-btn">إلغاء</a>
            </div>
        </form>
    </div>
</body>

<script>
    window.onload = function () {
        const toast = document.getElementById("toast");
        if (toast) {
            setTimeout(() => {
                toast.classList.remove("show");
            }, 3000); // يختفي بعد 3 ثوانٍ
        }
    };
</script>
</html>
